pipeline {
    agent any

    environment {
        MAVEN_HOME = '/usr/share/maven' 
    }
    tools {
        maven 'M3'   // Tells Jenkins to use Maven installation named 'M3'
        jdk 'Java17' // You can also define a JDK if needed
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', credentialsId: 'appifgfgg9', url: 'https://github.com/Sudhanvaav19/springboot1.git'
            }
        }

       stage('Install') {
            steps {
             sh '''
                   ls -lrt
                   maven install
                '''
            }
        }
    }
}
